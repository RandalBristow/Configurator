generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum AttributeDataType {
  string
  number
  boolean
  enum
  range
  json
}

model Category {
  id            String         @id @default(uuid())
  name          String         @unique
  description   String         @default("")
  order         Int            @default(0)
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subcategories Subcategory[]
}

model Subcategory {
  id          String   @id @default(uuid())
  categoryId  String
  name        String
  description String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  options  Option[]
}

model Option {
  id            String   @id @default(uuid())
  subcategoryId String
  code          String   @unique
  name          String
  description   String?
  sortOrder     Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  subcategory Subcategory @relation(fields: [subcategoryId], references: [id], onDelete: Cascade)
  attributes  Attribute[]
}

model Attribute {
  id                String            @id @default(uuid())
  optionId          String
  key               String            @unique
  label             String
  dataType          AttributeDataType
  selectListId      String?
  defaultExpression String?
  sortOrder         Int               @default(0)
  isActive          Boolean           @default(true)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  option     Option      @relation(fields: [optionId], references: [id], onDelete: Cascade)
  selectList SelectList? @relation(fields: [selectListId], references: [id])
}

model SelectList {
  id          String             @id @default(uuid())
  name        String             @unique
  description String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  items       SelectListItem[]
  attributes  Attribute[]
  groupSets   SelectListGroupSet[]
}

model SelectListItem {
  id            String                  @id @default(uuid())
  selectListId  String
  value         String
  displayValue  String
  order         Int                     @default(0)
  isActive      Boolean                 @default(true)
  tooltip       String?
  comments      String?
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt
  properties    SelectListItemProperty[]
  memberships   SelectListItemGroup[]

  selectList SelectList @relation(fields: [selectListId], references: [id], onDelete: Cascade)
}

enum SelectListPropertyType {
  string
  number
  boolean
  datetime
}

model SelectListItemProperty {
  id        String                  @id @default(uuid())
  itemId    String
  key       String
  value     String
  dataType  SelectListPropertyType
  createdAt DateTime                @default(now())
  updatedAt DateTime                @updatedAt

  item SelectListItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([itemId, key])
}

model SelectListGroupSet {
  id           String               @id @default(uuid())
  selectListId String
  name         String
  description  String?
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  groups       SelectListGroup[]

  selectList SelectList @relation(fields: [selectListId], references: [id], onDelete: Cascade)

  @@unique([selectListId, name])
}

model SelectListGroup {
  id      String              @id @default(uuid())
  setId   String
  name    String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  members SelectListItemGroup[]

  groupSet SelectListGroupSet @relation(fields: [setId], references: [id], onDelete: Cascade)

  @@unique([setId, name])
}

model SelectListItemGroup {
  itemId  String
  groupId String

  item  SelectListItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  group SelectListGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([itemId, groupId])
}
        
