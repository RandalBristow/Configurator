generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum VariableDataType {
  string
  number
  boolean
  datetime
  stringArray
  numberArray
  booleanArray
  datetimeArray
  collection
}

enum OptionType {
  simple
  configured
}

model Option {
  id            String     @id @default(uuid())
  name          String
  description   String?
  isActive      Boolean    @default(true)
  optionType    OptionType @default(simple)
  formDraft     Json?
  formPublished Json?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  variables Variable[]
}

model Variable {
  id           String           @id @default(uuid())
  optionId     String?
  ownerKey     String
  name         String
  description  String?
  sortOrder    Int              @default(0)
  isActive     Boolean          @default(true)
  dataType     VariableDataType
  defaultValue Json?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  option Option? @relation(fields: [optionId], references: [id], onDelete: Cascade)

  @@unique([ownerKey, name])
  @@index([optionId])
}

model SelectList {
  id          String             @id @default(uuid())
  name        String             @unique
  description String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  items       SelectListItem[]
  groupSets   SelectListGroupSet[]
  boundGroupSets SelectListGroupSet[] @relation("SelectListGroupSetBound")
  properties  SelectListProperty[]
}

model SelectListItem {
  id            String                  @id @default(uuid())
  selectListId  String
  value         String
  displayValue  String
  order         Int                     @default(0)
  isActive      Boolean                 @default(true)
  tooltip       String?
  comments      String?
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt
  properties    SelectListItemProperty[]
  memberships   SelectListItemGroup[]
  boundMemberships SelectListBoundMembership[] @relation("SelectListBoundMembershipItem")
  boundGroupMemberships SelectListBoundMembership[] @relation("SelectListBoundMembershipBoundItem")

  selectList SelectList @relation(fields: [selectListId], references: [id], onDelete: Cascade)
}

enum SelectListPropertyType {
  string
  number
  boolean
  datetime
}

enum LookupTableDataType {
  string
  number
  boolean
  datetime
}

model SelectListProperty {
  id          String               @id @default(uuid())
  selectListId String
  key         String
  dataType    SelectListPropertyType
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  selectList SelectList @relation(fields: [selectListId], references: [id], onDelete: Cascade)

  @@unique([selectListId, key])
  @@index([selectListId])
}

model SelectListItemProperty {
  id        String                  @id @default(uuid())
  itemId    String
  key       String
  value     String
  dataType  SelectListPropertyType
  createdAt DateTime                @default(now())
  updatedAt DateTime                @updatedAt

  item SelectListItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([itemId, key])
}

model SelectListGroupSet {
  id           String               @id @default(uuid())
  selectListId String
  name         String
  description  String?
  boundSelectListId String?
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  groups       SelectListGroup[]
  boundMemberships SelectListBoundMembership[]

  selectList SelectList @relation(fields: [selectListId], references: [id], onDelete: Cascade)
  boundSelectList SelectList? @relation("SelectListGroupSetBound", fields: [boundSelectListId], references: [id])

  @@unique([selectListId, name])
}

model SelectListGroup {
  id      String              @id @default(uuid())
  setId   String
  name    String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  members SelectListItemGroup[]

  groupSet SelectListGroupSet @relation(fields: [setId], references: [id], onDelete: Cascade)

  @@unique([setId, name])
}

model SelectListItemGroup {
  itemId  String
  groupId String

  item  SelectListItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  group SelectListGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([itemId, groupId])
}

model SelectListBoundMembership {
  itemId      String
  boundItemId String
  groupSetId  String

  item      SelectListItem    @relation("SelectListBoundMembershipItem", fields: [itemId], references: [id], onDelete: Cascade)
  boundItem SelectListItem    @relation("SelectListBoundMembershipBoundItem", fields: [boundItemId], references: [id], onDelete: Cascade)
  groupSet  SelectListGroupSet @relation(fields: [groupSetId], references: [id], onDelete: Cascade)

  @@id([itemId, boundItemId, groupSetId])
  @@index([groupSetId, boundItemId])
}

model LookupTable {
  id          String             @id @default(uuid())
  name        String             @unique
  description String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  columns     LookupTableColumn[]
  rows        LookupTableRow[]
}

model LookupTableColumn {
  id        String            @id @default(uuid())
  tableId   String
  name      String
  dataType  LookupTableDataType
  sortOrder Int               @default(0)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  table LookupTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@unique([tableId, name])
  @@index([tableId])
}

model LookupTableRow {
  id        String   @id @default(uuid())
  tableId   String
  sortOrder Int      @default(0)
  values    Json
  rowHash   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  table LookupTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@unique([tableId, rowHash])
  @@index([tableId])
}
        
